<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundImage="fondoapp.jpeg"
             x:Class="App.CrearVotacion">

    <StackLayout>
        <Button Text="VOTACION SIMPLE"
                Margin="5,5,5,5"
                TextColor="White"
                BackgroundColor="Blue"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55" 
                Clicked="VotSimple"/>
        
        <Button Text="VOTACIONES COMPLEJA"
                Margin="5,5,5,5"
                TextColor="White"
                BackgroundColor="Blue"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55" 
                Clicked="VotCompleja"/>
        
    </StackLayout>
    

</ContentPage>