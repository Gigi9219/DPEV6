<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="App.Page1">

    <StackLayout Orientation="Vertical" Spacing="1">

        <Label x:Name="label"
               Text="BIENVENIDO"
               FontSize="Large"
               VerticalOptions="CenterAndExpand"
               HorizontalOptions="Center" />



        <Button Text="VOTACIONES"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Orange"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55" />

        <Button Text="VOTACIONES FUTURAS"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Orange"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55" />

        <Button Text="RESULTADOS"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Orange"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55"/>

        <Button Text="CERRAR SESION"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                TextColor="White"
                BackgroundColor="Orange"
                BorderWidth="15"
                CornerRadius="15"
                WidthRequest="170"
                HeightRequest="55"/>

    </StackLayout>

</ContentPage>